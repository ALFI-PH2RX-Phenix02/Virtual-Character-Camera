<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backround">

    <com.example.virtual_character_camera.CameraView
        android:id="@+id/camera"
        android:layout_width="320px"
        android:layout_height="320px" />

    <TextView
        android:id="@+id/hide_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/camera"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Hide Camera"
        android:textSize="15sp"
        />
    <Switch
        android:id="@+id/hide_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/hide_text"
        android:onClick="click_hide"
        />

    <SeekBar
        android:id="@+id/scale"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:progress="50"
        android:min="10"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="CHange"
        android:onClick="click_change"
        />



</RelativeLayout>